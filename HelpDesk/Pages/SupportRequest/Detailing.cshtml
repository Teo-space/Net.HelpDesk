@page
@model HelpDesk.Pages.SupportRequest.DetailModel



<div class="d-flex align-items-center justify-content-center">

	<form class="form-group col-sm-6" method="post">

		<div class="form-group m-2">
			<label for="SetDescription.Id">Id</label>
			<input type="text" class="form-control"
				   name="SetDescription.Id"
				   id="SetDescription.Id" value=@Model.GetResult.Id hidden>
			<span asp-validation-for="SetDescription.Id" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="GetResult.CreatorName">CreatorName</label>
			<input type="text" class="form-control"
					name="GetResult.CreatorName" 
					id="GetResult.CreatorName"
				   value=@Model.GetResult.CreatorName disabled>
			<span asp-validation-for="GetResult.CreatorName" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="GetResult.CreatorEmail">CreatorEmail</label>
			<input type="text" class="form-control"
					name="GetResult.CreatorEmail" 
					id="GetResult.CreatorEmail"
					value=@Model.GetResult.CreatorEmail disabled>
			<span asp-validation-for="GetResult.CreatorEmail" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="Model.GetResult.Created">Created</label>
			<input type="datetime" class="form-control" 
					name="GetResult.Created" 
					id="GetResult.Created" 
					value=@Model.GetResult.Created disabled>
			<span asp-validation-for="GetResult.Created" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="GetResult.Category">Category</label>
			<input type="text" class="form-control" 
					name="GetResult.Category" 
					id="GetResult.Category"
					value=@Model.GetResult.Category disabled>
			<span asp-validation-for="GetResult.Category" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="GetResult.Status">Status</label>
			<input type="text" class="form-control" 
					name="GetResult.Status" 
					id="GetResult.Status"
				   value=@Model.GetResult.Status disabled>
			<span asp-validation-for="GetResult.Status" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="GetResult.Name">Name</label>
			<input type="text" class="form-control" 
					name="GetResult.Name" 
					id="GetResult.Name"
					value=@Model.GetResult.Name disabled>
			<span asp-validation-for="GetResult.Name" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<label for="SetDescription.Description">Description</label>
			<textarea class="form-control" rows="4"
					name="SetDescription.Description"
					id="SetDescription.Description
					value=@Model.GetResult?.Description ">@Model.GetResult?.Description</textarea>
			<span asp-validation-for="SetDescription.Description" class="text-danger"></span>
		</div>

		<div class="form-group m-2">
			<div class="col-sm-offset-2 col-sm-10 pt-2">
				<button type="submit" class="btn btn-outline-dark">Save</button>
			</div>
		</div>




	</form>


</div>